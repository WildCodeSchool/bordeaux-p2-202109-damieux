{% extends 'layout.html.twig' %}

{% block title %}
    {{parent()}} - {{ activity.title }}
{% endblock %}

{% block content %}
    {% if session.register is not empty %}
        <div class="d-flex justify-content-end mt-5 mx-4 text-white">
            <p>Connecté en tant que {{ session.register.firstname }} {{ session.register.lastname }}</p>
        </div>
    {% endif %}
    <div class="card mt-3 col col-lg-4 col-md-6 col-sm-10 m-auto w-75 bg-light bg-opacity-75">
        <div class="card-header text-center">
            <h1>{{ activity.title }}</h1>
        </div>
        <div class="card-body text-dark ">
            <div class="fs-6 text-center border rounded-3 mb-2 bg-light p-2 text-dark bg-opacity-25">
                <p>{{ activity.description }}</p>
            </div>
            <div class="text-center fs-4">
                <p>Voici les propositions pour cette activité :</p>
            </div>
            {% for error in errors %}
                <div class="m-auto text-center">
                    <p class="text-danger">{{ error }}</p>
                </div>
            {% endfor %}
            <div class="d-flex justify-content-center">
                <form action="" method="post" class="m-1">
                    {% for propose in proposes %}
                        <label class="btn btn-outline-danger rounded pill vote mx-3 mt-3" for={{propose.id}}>{{ propose.content }}</label>
                        <input id={{propose.id}} class='d-none' type="checkbox" value="{{ propose.id }}" name=answers[]>
                     {% endfor %}
                    <div class="d-flex justify-content-center mt-5">
                        {% if ableToVote %}
                        <button type="submit" class="btn btn-outline-danger rounded-pill">Valider</button>
                        {% else %}
                        <span>Vous avez déjà voté pour {{ proposeVoting.content }}</span>
                        {% endif %}
                    </div>
                </form>
            </div>
        </div>
        <div class="d-flex m-4">
            <form method="post" action="/activite/ajout-comment?id={{ activity.id }}">
                <textarea name="content" placeholder="Ecris un commentaire"></textarea>
                <button type="submit">Envoyer</button>
            </form>
        </div>
        <div>
            {% for comment in comments %}
                <p>Poster par {{ comment.firstname }} <img src="https://avatars.githubusercontent.com/{{ comment.github }}" class="rounded-pill" width="30px" height="30px" alt="comment"></p>
                <p>{{ comment.content }}</p>
            {% else %}
                <p>Aucun commentaires</p>
            {% endfor %}
        </div>

        <div>
            <canvas id="myChart" width="300" height="300" data-count="{{ vote_count_by_answer|join(',') }}" data-answers="{{ chart_proposes|join(',') }}"></canvas>
        </div>
        
        <div class="d-flex justify-content-start mx-3 ">
            <a class="text-muted" href="/user/profil?id={{ user_data.id }}"><small>Créer par {{ user_data.firstname }} {{ user_data.lastname }}</small></a>
        </div>

    </div>
{% endblock %}
{% block javascript %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.6.0/chart.min.js"></script>
<script src="/assets/js/chart-bar.js"></script>
<script src="/assets/js/button.js"></script>

{% endblock %}
