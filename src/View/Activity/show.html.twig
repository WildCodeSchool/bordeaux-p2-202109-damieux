{% extends 'layout.html.twig' %}

{% block title %}
    {{parent()}} - {{ activity.title }}
{% endblock %}

{% block content %}
    {% if session.register is not empty %}
        <div class="d-flex justify-content-end mt-5 mx-4 text-white">
            <p>Connecté en tant que {{ session.register.firstname }} {{ session.register.lastname }}</p>
        </div>
    {% endif %}
    <div class="card mt-3 col col-lg-4 col-md-6 col-sm-10 m-auto w-75 bg-light bg-opacity-75">
        <div class="card-header text-center">
            <h1>{{ activity.title }}</h1>
        </div>
        <div class="card-body text-dark">
            <div class="fs-3 text-center">
                <p>{{ activity.description }}</p>
            </div>
            <div class="text-center p-2 fs-4">
                <p>Voici les propositions pour cette activité :</p>
            </div>
            <div class="d-flex justify-content-center">
                {% for propose in proposes %}
                    <form method="post" class="m-1">
                        <div>
                            <label for="id-1"></label>
                            <input type="checkbox" id="id-1">
                            <button type="button" class="btn btn-outline-danger rounded-pill">{{ propose.content }}</button>
                        </div>
                    </form>
                {% endfor %}
            </div>
            <div class="d-flex justify-content-start mt-3">
                <p>Crée par {{ user_data.firstname }} {{ user_data.lastname }}</p>
            </div>
        </div>
        <div>
            <canvas id="myChart" width="300" height="300" data-count="{{ vote_count_by_answer|join(',') }}" data-answers="{{ chart_proposes|join(',') }}"></canvas>
        </div>
    </div>
{% endblock %}
{% block javascript %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.6.0/chart.min.js"></script>
<script src="/assets/js/chart-bar.js"></script>
{% endblock %}
