{% extends 'layout.html.twig' %}

{% block title %}
    {{parent()}} - {{ activity.title }}
{% endblock %}

{% block content %}
    {% if session.register is not empty %}
        <div class="d-flex justify-content-end mt-5 mx-4 text-white">
            <p>Connecté en tant que {{ session.register.firstname }} {{ session.register.lastname }}</p>
        </div>
    {% endif %}
    <div class="card mt-3 col col-lg-4 col-md-6 col-sm-10 m-auto w-75 bg-light bg-opacity-75">
        <div class="card-header text-center">
            <h1>{{ activity.title }}</h1>
        </div>
        <div class="card-body text-dark ">
            <div class="fs-6 text-center border rounded-3 p-3 mb-2 bg-light bg-success p-2 text-dark bg-opacity-50">
                <p>{{ activity.description }}</p>
            </div>
            <div class="text-center p-2 fs-4">
                <p>Voici les propositions pour cette activité :</p>
            </div>

            <div class="d-flex justify-content-center">
                <form actione="" method="post" class="m-1">
                    {% for propose in proposes %}
                        <label class="btn btn-outline-danger rounded pill vote mx-3" for={{propose.id}}>{{ propose.content }}</label>
                        <input id={{propose.id}} class='d-none' type="checkbox" value="{{ propose.id }}" name=answers[]>
                    {% endfor %}
                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-outline-danger rounded-pill">Valider</button>
                    </div>
                </form>
            </div>

            <div class="d-flex justify-content-start mt-3">
                <p>Crée par {{ user_data.firstname }} {{ user_data.lastname }}</p>
            </div>
        </div>
        <div>
            <canvas id="myChart" width="300" height="300" data-count="{{ vote_count_by_answer|join(',') }}" data-answers="{{ chart_proposes|join(',') }}"></canvas>
        </div>
    </div>
{% endblock %}
{% block javascript %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.6.0/chart.min.js"></script>
<script src="/assets/js/chart-bar.js"></script>
<script src="/assets/js/button.js"></script>

{% endblock %}
