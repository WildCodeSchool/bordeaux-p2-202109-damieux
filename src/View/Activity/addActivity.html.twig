{% extends 'layout.html.twig' %}

{% block title %}
    {{parent()}} - Creation
{% endblock %}

{% block content %}
    {% if session.register is not empty %}
        <div class="d-flex justify-content-end mt-5 mx-4 text-white">
            <p>Connecté en tant que {{ session.register.firstname }} {{ session.register.lastname }}</p>
        </div>
    {% endif %}
    <div class="card text-dark bg-light mb-3 m-auto w-75 mt-3 bg-opacity-75">
        <div class="card-header text-center">
            <h1>Créer une activité</h1>
        </div>
        {% for error in errors %}
            <div class="m-auto mt-2 text-center">
                <p class="text-danger">{{ error }}</p>
            </div>
        {% endfor %}
        <div class="card-body">
            <form action="" class="col col-lg-4 col-md-6 col-sm-10 p-4 m-auto w-75" method="post">
                <div class="form-group">
                    <input type="text" name="title" class="form-control border-0 border-bottom rounded-0 rounded-top fs-2 p-4" placeholder="Titre de l'événement" autofocus>
                </div>
                <div class="form-group">
                    <textarea type="text" name="description" class="form-control border-0 rounded-0 rounded-bottom fs-3 p-4" placeholder="Description"></textarea>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="rounded-pill border-2 btn btn-outline-danger btn-sm mb-3 mt-4 p-2 fs-5" type="submit">Suivant</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}





