{% extends 'layout.html.twig' %}

{% block title %}
    {{parent()}} - Créer un événement
{% endblock %}

{% block content %}
    {% if session.register is not empty %}
        {% if(session.register.is_admin) %}
            <div class="d-flex justify-content-end mt-5 me-4 text-white">
                <p class="fs-4">Administrateur</p>
            </div>
        {% endif %}
        <div class="d-flex justify-content-end me-4 text-white">
            <p>Connecté en tant que {{ session.register.firstname }} {{ session.register.lastname }}</p>
        </div>
    {% endif %}
    <div class="text-center text-white fs-1 mb-2">
        <h1>Créer une activité</h1>
    </div>
    <div class="container-fluid mb-5">
        <div class="col-sm-12 col-lg-10 mx-auto text-dark mb-3">
            {% for error in errors %}
                <div class="m-auto mt-2 text-center">
                    <p class="text-danger">{{ error }}</p>
                </div>
            {% endfor %}
            <div class="card-body">
                <form action="" class="col col-lg-4 col-md-6 col-sm-10 p-4 m-auto w-75" method="post">
                    <div class="placeholder-title">
                        <input type="text" name="title" class="form-control border-0 border-bottom rounded-0 rounded-top fs-6 p-4" placeholder="Le titre de ton événement" autofocus>
                    </div>
                    <div class="form-group fs-1">
                        <textarea type="text" name="description" class="form-control border-0 rounded-0 rounded-bottom fs-6 p-4" placeholder="En quelques mots, décris-nous l'activité que tu souhaites organiser..."></textarea>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-outline-dark color-text-dark btn-sm mb-3 mt-4 p-2 fs-5 border-2" type="submit">Suivant</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}





