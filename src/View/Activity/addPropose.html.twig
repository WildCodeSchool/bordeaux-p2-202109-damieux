{% extends 'layout.html.twig' %}

{% block title %}
    {{parent()}} - Propositions
{% endblock %}

{% block content %}
    {% if session.register is not empty %}
        {% if(session.register.is_admin) %}
            <div class="d-flex justify-content-end mt-5 me-4 text-white">
                <p class="fs-4">Administrateur</p>
            </div>
        {% endif %}
        <div class="d-flex justify-content-end me-4 text-white">
            <p>Connect√© en tant que {{ session.register.firstname }} {{ session.register.lastname }}</p>
        </div>
    {% endif %}
    <div class="text-center text-white fs-1"><!-- add mb-5 if it's not ok for team -->
        <h1>Propositions</h1>
        <p class="fs-6">Indique ici les choix pour lesquels les participants pourront voter</p>
    </div>
    <div class="container-fluid"> <!-- add mt-5 if it's not ok for team -->
        <div class="card col-sm-12 col-lg-8 mx-auto text-dark bg-light mb-3 mt-3 bg-opacity-75">
            {% for error in errors %}
                <div class="m-auto text-center mt-2">
                    <p class="text-danger">{{ error }}</p>
                </div>
            {% endfor %}
            <div class="card-body">
            <form action="" class="col col-lg-4 col-md-6 col-sm-10 m-auto" method="post">
                <div class="form-group d-flex justify-content-end">
                    <input type="text" name="propose[]" class="form-control border-0 border-bottom mb-2" id="propose" autofocus>
                    <input type="hidden" name="activityId" value={{ activity_id }}>
                </div>
                <div id="container"></div>
                    <div class="d-flex justify-content-center">
                        <div id="add-propose">
                            <button type="button" class="btn btn-outline-dark m-2 border-2" onclick="addInput()">+</button>
                            <button type="submit" class="btn btn-outline-dark m-2 border-2">Valider</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
<script src="/assets/js/script.js"></script>
{% endblock %}



