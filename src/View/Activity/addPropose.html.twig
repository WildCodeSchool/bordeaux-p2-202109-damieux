{% extends 'layout.html.twig' %}

{% block title %}
    {{parent()}} - Proposition
{% endblock %}

{% block content %}
    <div class="card text-dark bg-light mb-3 m-auto w-75 mt-5">
        <div class="card-header text-center mb-3">
            <h1>Proposition(s) :</h1>
        </div>
        {% for error in errors %}
        <div class="bg-danger opacity-75 m-auto w-50 text-center mb-3">
            <ul>
                <li class="text-light p-1">{{ error }}</li>
            </ul>
        </div>
        {% endfor %}
        <div class="card-body">
            <form class="col col-lg-4 col-md-6 col-sm-10 m-auto" method="post">
                <div class="form-group d-flex justify-content-end">
                    <input type="text" name="propose[]" class="form-control border-0 border-bottom mb-3" id="propose" autofocus>
                    <input type="hidden" name="activityId" value={{ activity_id }}>
                </div>
                <div id="container"></div>
                <button type="button" class="btn btn-outline-danger rounded-pill m-2" onclick="addInput_text()">+</button>
                <button type="submit" class="btn btn-outline-danger rounded-pill m-2">Ajouter</button>
            </form>
        </div>
    </div>
{% endblock %}



