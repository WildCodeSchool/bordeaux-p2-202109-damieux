{% extends 'layout.html.twig' %}

{% block title %}
    {{parent()}} - Propositions
{% endblock %}

{% block content %}
    {% if session.register is not empty %}
        <div class="d-flex justify-content-end mt-5 mx-4 text-white">
            <p>Connect√© en tant que {{ session.register.firstname }} {{ session.register.lastname }}</p>
        </div>
    {% endif %}
    <div class="card text-dark bg-light mb-3 m-auto w-75 mt-3 bg-opacity-75">
        <div class="card-header text-center mb-3">
            <h1>Propositions</h1>
        </div>
        {% for error in errors %}
            <div class="m-auto text-center mt-2">
                <p class="text-danger">{{ error }}</p>
            </div>
        {% endfor %}
        <div class="card-body">
            <form action="" class="col col-lg-4 col-md-6 col-sm-10 m-auto" method="post">
                <div class="form-group d-flex justify-content-end">
                    <input type="text" name="propose[]" class="form-control border-0 border-bottom mb-2" id="propose" autofocus>
                    <input type="hidden" name="activityId" value={{ activity_id }}>
                </div>
                <div id="container"></div>
                <div class="d-flex justify-content-center">
                    <div id="add-propose">
                        <button type="button" class="btn btn-outline-danger rounded-pill m-2" onclick="addInput()">+</button>
                    </div>
                    <button type="submit" class="btn btn-outline-danger rounded-pill m-2">Ajouter</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block javascript %}
<script src="/assets/js/script.js"></script>
{% endblock %}



