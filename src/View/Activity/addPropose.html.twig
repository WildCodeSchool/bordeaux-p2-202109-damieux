{% extends 'layout.html.twig' %}

{% block title %}
    {{parent()}} - Proposition
{% endblock %}

{% block content %}
    {% if session.register is not empty %}
        <div class="d-flex justify-content-end mt-5 mx-4">
            <p>Connecter en tant que {{ session.register.firstname }} {{ session.register.lastname }}</p>
        </div>
    {% endif %}
    <div class="card text-dark bg-light mb-3 m-auto w-75 mt-5">
        <div class="card-header text-center mb-3">
            <h1>Proposition(s) :</h1>
        </div>
        {% for error in errors %}
        <div class="bg-danger opacity-75 m-auto w-50 text-center mb-3">
            <ul>
                <li class="text-light p-1">{{ error }}</li>
            </ul>
        </div>
        {% endfor %}
        <div class="card-body">
            <form class="col col-lg-4 col-md-6 col-sm-10 m-auto" method="post">
                <div class="form-group d-flex justify-content-end">
                    <input type="text" name="propose[]" class="form-control border rounded mb-3" id="propose" autofocus>
                    <input type="hidden" name="activityId" value={{ activity_id }}>
                </div>
                <div id="container"></div>
                <div class="d-flex justify-content-center">
                    <button type="button" class="btn btn-outline-danger rounded-pill m-2" onclick="addInput()">+</button>
                    <button type="submit" class="btn btn-outline-danger rounded-pill m-2">Ajouter</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}



