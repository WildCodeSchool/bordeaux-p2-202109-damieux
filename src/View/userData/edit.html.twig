{% extends 'layout.html.twig' %}

{% block title %}
    {{parent()}} - Edit
{% endblock %}

{% block content %}
    {% if session.register is not empty %}
        {% if(session.register.is_admin) %}
            <div class="d-flex justify-content-end mt-5 me-4 text-white">
                <p class="fs-4">Administrateur</p>
            </div>
        {% endif %}
        <div class="d-flex justify-content-end me-4 text-white">
            <p>Connecté en tant que {{ session.register.firstname }} {{ session.register.lastname }}</p>
        </div>
    {% endif %}
    <div class="text-center text-white fs-1 mb-5">
        <h1>Modifier vos informations</h1>
    </div>
    <div class="row m-auto d-flex justify-content-center mt-4 mb-5 w-75">
        <form class="col col-lg-4 col-md-6 col-sm-10 border rounded p-4 bg-white bg-opacity-75" method="post">
            <div class="form-group form-floating">
                <input type="text" name="lastname" value="{{ user_data.lastname }}" class="form-control border-bottom-0 rounded-0 rounded-top" id="floatingInput">
                <label for="floatingInput">Nom</label>
            </div>
            <div class="form-group form-floating">
                <input type="text" name="firstname" value="{{ user_data.firstname }}" class="form-control border-bottom-0 rounded-0" id="floatingInput">
                <label for="floatingInput">Prénom</label>
            </div>
            <div class="form-group form-floating">
                <input type="text" name="github" value="{{ user_data.github }}" class="form-control border-bottom-0 rounded-0 " id="floatingInput">
                <label for="floatingInput">Pseudo Github</label>
            </div>
            <div class="d-flex justify-content-center">
                <button class="rounded-pill fs-6 border-2 btn btn-outline-danger btn-sm mb-3 mt-4 p-2" type="submit">Mettre à jour</button>
            </div>
            <a href="/user/profil?id={{ user_data.id }}" class="text-dark">Retour</a>
        </form>
    </div>

{% endblock %}